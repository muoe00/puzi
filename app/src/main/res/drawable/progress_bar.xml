<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@android:id/background">
    <shape
      android:shape="ring"
      android:thickness="3dp">
      <solid
        android:color="#E7E8E9"/>
    </shape>
  </item>

  <item
    android:id="@android:id/secondaryProgress">
    <shape
      android:shape="ring"
      android:thickness="3dp">
      <solid
        android:color="#E7E8E9"/>
    </shape>
  </item>

  <item
    android:id="@android:id/progress">
    <shape
      android:thickness="3dp"
      android:shape="ring">
      <gradient
        android:centerY="0.5"
        android:endColor="#ff5146"
        android:startColor="#ff2470"/>
    </shape>
  </item>

</layer-list>