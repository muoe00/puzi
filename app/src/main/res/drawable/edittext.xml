<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <stroke
                android:width="1dip" android:color="@color/colorPuzi"/>
            <corners android:radius="2dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <stroke
                android:width="1dip" android:color="@color/colorPuzi"/>
            <corners android:radius="2dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
              android:angle="270"
              android:endColor="#fafafa"
              android:startColor="#fafafa" />
            <corners android:radius="2dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
              android:angle="270"
              android:endColor="#fafafa"
              android:startColor="#fafafa" />
            <stroke
                android:width="1dip" android:color="#dadada"/>
            <corners android:radius="2dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
</selector>