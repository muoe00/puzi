<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Define the background properties like color etc -->
  <item android:id="@android:id/background">
    <shape>
      <gradient
        android:startColor="#eeeeee"
        android:centerColor="#eeeeee"
        android:centerY="1.0"
        android:endColor="#eeeeee"
        android:angle="270"
      />
      <corners
        android:bottomLeftRadius="11dp"
        android:bottomRightRadius="11dp"
        android:topLeftRadius="11dp"
        android:topRightRadius="11dp" />
    </shape>
  </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">

    <clip>
      <shape>
        <gradient
          android:startColor="#ac3abd"
          android:centerColor="#ac3abd"
          android:centerY="1.0"
          android:endColor="#ac3abd"
          android:angle="270"
        />
        <corners
          android:bottomLeftRadius="11dp"
          android:bottomRightRadius="11dp"
          android:topLeftRadius="11dp"
          android:topRightRadius="11dp" />
      </shape>
    </clip>
  </item>
</layer-list>