<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/ll_advertise_top_container"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:background="#ffffff"
      android:layout_height="54dp">

      <ImageButton
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/back"
        android:background="#00000000"
        android:id="@+id/btn_back_web"/>

      <LinearLayout
        android:id="@+id/ll_ad_company"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.joooonho.SelectableRoundedImageView
          app:sriv_right_top_corner_radius="14.5dp"
          app:sriv_left_top_corner_radius="14.5dp"
          app:sriv_left_bottom_corner_radius="14.5dp"
          app:sriv_right_bottom_corner_radius="14.5dp"
          app:sriv_border_color="#979797"
          app:sriv_border_width="1dp"
          android:layout_marginRight="14dp"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:scaleType="centerCrop"
          android:layout_gravity="center_vertical"
          android:id="@+id/iv_companyPicture"/>

        <com.puzi.puzi.ui.customview.RobotoTextView
          android:text="companyName"
          android:layout_width="wrap_content"
          android:layout_height="19dp"
          android:textSize="16sp"
          android:textColor="#6D6D6D"
          android:layout_gravity="center_vertical"
          android:id="@+id/tv_companyId"/>

      </LinearLayout>

      <ImageButton
        android:id="@+id/btn_channel_web"
        android:layout_gravity="right|center_vertical"
        android:background="@null"
        android:src="@drawable/ad_detail_channel"
        android:layout_marginRight="8dp"
        android:padding="13dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:id="@+id/ll_advertise_top_line"
      android:background="#dadada"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>

    <FrameLayout
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="0dp">

      <WebView
        android:id="@+id/web_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      </WebView>

      <LinearLayout
        android:id="@+id/ll_web_dialog"
        android:background="#ccffffff"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="vertical">

        <LinearLayout
          android:orientation="horizontal"
          android:layout_marginLeft="17dp"
          android:layout_marginRight="37dp"
          android:layout_marginTop="16dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <com.puzi.puzi.ui.customview.RobotoTextView
            android:text="Q"
            android:textColor="#333333"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_marginRight="6dp"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>

          <com.puzi.puzi.ui.customview.NotoTextView
            app:fontWeight="medium"
            android:id="@+id/tv_ad_quiz"
            android:text="광고의 할인하는 상품명은?"
            android:textColor="#333333"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
          android:orientation="horizontal"
          android:layout_marginLeft="37dp"
          android:layout_marginRight="37dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <com.puzi.puzi.ui.customview.NotoTextView
            app:fontWeight="medium"
            android:text="(힌트는 상단에 있습니다)"
            android:textColor="#333333"
            android:textSize="18sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
          android:layout_marginLeft="45dp"
          android:layout_marginRight="45dp"
          android:layout_marginTop="21dp"
          android:layout_width="match_parent"
          android:layout_height="44dp"
          android:orientation="horizontal">

          <com.puzi.puzi.ui.customview.NotoButton
            android:text="취소"
            android:textColor="#6d6d6d"
            android:id="@+id/tv_ad_answer_first"
            android:background="@drawable/button_ad_answer"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22.5dp"/>

          <com.puzi.puzi.ui.customview.NotoButton
            android:text="확인"
            android:textColor="#6d6d6d"
            android:id="@+id/tv_ad_answer_second"
            android:background="@drawable/button_ad_answer"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22.5dp"/>

        </LinearLayout>

      </LinearLayout>

    </FrameLayout>

    <LinearLayout
      android:id="@+id/ll_advertise_bottom_container"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:background="#fafafa"
      android:layout_height="50dp">

      <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/path_12_copy"
        android:background="#00000000"
        android:id="@+id/ibtn_advertise_web_back"/>

      <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

      <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/path_12"
        android:background="#00000000"
        android:id="@+id/ibtn_advertise_web_forward"/>

      <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

      <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/refresh"
        android:background="#00000000"
        android:id="@+id/ibtn_advertise_web_refresh"/>

      <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

      </LinearLayout>

      <FrameLayout
        android:background="@null"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ProgressBar
          android:id="@+id/pg_advertise"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:indeterminate="false"
          style="?android:attr/progressBarStyleHorizontal"
          android:background="@drawable/progress_background"
          android:progressDrawable="@drawable/progress_ad"/>

        <ImageView
          android:layout_gravity="center"
          android:visibility="invisible"
          android:id="@+id/iv_advertise_state"
          android:layout_width="23dp"
          android:layout_height="23dp"/>

        <LinearLayout
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <com.puzi.puzi.ui.customview.NotoTextView
            android:gravity="center"
            app:fontWeight="regular"
            android:id="@+id/tv_advertise_progress"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@color/colorPuzi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

          <com.puzi.puzi.ui.customview.NotoTextView
            android:gravity="center"
            app:fontWeight="regular"
            android:id="@+id/tv_advertise_progress_2"
            android:text="초"
            android:textSize="12sp"
            android:textColor="@color/colorPuzi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        </LinearLayout>

      </FrameLayout>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>