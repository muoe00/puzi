<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/ll_searchpw"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:orientation="vertical"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="19dp"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp">

      <kr.puzi.puzi.ui.customview.NotoTextView
        app:fontWeight="medium"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="left"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:text="관심분야"/>

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gl_favorites"
        android:layout_marginTop="8dp">

        <LinearLayout
          android:layout_marginBottom="15dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_beauty"
            android:text="뷰티"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_shopping"
            android:text="쇼핑"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

        </LinearLayout>

        <LinearLayout
          android:layout_marginBottom="15dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_game"
            android:text="게임"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_eat"
            android:text="외식"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

        </LinearLayout>

        <LinearLayout
          android:layout_marginBottom="15dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_tour"
            android:text="여행\n(항공,호텔)"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_finance"
            android:text="금융\n(보험,제테크)"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

        </LinearLayout>

        <LinearLayout
          android:layout_marginBottom="15dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <kr.puzi.puzi.ui.customview.NotoButton
            app:fontWeight="regular"
            android:background="@drawable/button_favorite_off"
            android:id="@+id/btn_setting_culture"
            android:text="문화\n(콘서트,공연)"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

          <kr.puzi.puzi.ui.customview.NotoButton
            android:text="문화\n(콘서트,공연)"
            app:fontWeight="regular"
            android:visibility="invisible"
            android:background="@drawable/button_favorite_off"
            android:textSize="16sp"
            android:textColor="@color/colorTextGray"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="54dp"/>

        </LinearLayout>

      </LinearLayout>

      <kr.puzi.puzi.ui.customview.NotoTextView
        app:fontWeight="medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="3개 이상 선택해주세요"
        android:gravity="left" android:id="@+id/textView5"/>

    </LinearLayout>

    <kr.puzi.puzi.ui.customview.NotoButton
      app:fontWeight="medium"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginTop="40dp"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:layout_marginBottom="20dp"
      android:id="@+id/btn_setting_user_modify"
      android:textSize="16sp"
      android:text="수정하기"
      android:textColor="@color/colorWhite"
      android:background="@drawable/button_puzi"/>

  </LinearLayout>

</LinearLayout>