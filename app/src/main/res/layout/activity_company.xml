<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#efefef"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <!-- 상단바 -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="50dp">

    <ImageButton
      android:paddingRight="17dp"
      android:paddingLeft="8dp"
      android:paddingTop="12.5dp"
      android:paddingBottom="12.5dp"
      android:layout_width="37dp"
      android:layout_height="match_parent"
      android:background="#00000000"
      android:src="@drawable/back"
      android:id="@+id/btn_back_profile"
      android:backgroundTint="#000000"/>

    <com.joooonho.SelectableRoundedImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      app:sriv_right_top_corner_radius="20dp"
      app:sriv_left_top_corner_radius="20dp"
      app:sriv_left_bottom_corner_radius="20dp"
      app:sriv_right_bottom_corner_radius="20dp"
      app:sriv_border_color="#979797"
      app:sriv_border_width="1dp"
      android:layout_gravity="center"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="centerCrop"
      android:visibility="invisible"
      android:id="@+id/iv_title_companyProfile_picture"/>

    <TextView
      android:id="@+id/tv_title_companyName"
      android:gravity="center"
      android:layout_marginLeft="3dp"
      android:layout_width="wrap_content"
      android:textSize="16sp"
      android:textColor="#333333"
      android:visibility="invisible"
      android:layout_height="match_parent"/>

    <View
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"/>

    <ImageButton
      android:id="@+id/btn_block"
      android:layout_gravity="right|center_vertical"
      android:src="@drawable/wrong"
      android:padding="13dp"
      android:background="#00000000"
      android:layout_width="45dp"
      android:layout_height="45dp"/>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_title_bottom_bar"
    android:visibility="invisible"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>

  <com.puzi.puzi.ui.CusomScrollView
    android:id="@+id/sv_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
      <LinearLayout
        android:id="@+id/ll_company_container"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.joooonho.SelectableRoundedImageView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          app:sriv_right_top_corner_radius="75dp"
          app:sriv_left_top_corner_radius="75dp"
          app:sriv_left_bottom_corner_radius="75dp"
          app:sriv_right_bottom_corner_radius="75dp"
          app:sriv_border_color="#979797"
          app:sriv_border_width="1dp"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="16dp"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:scaleType="centerCrop"
          android:id="@+id/iv_companyProfile_picture"/>

        <TextView
          android:id="@+id/tv_companyName"
          android:gravity="center"
          android:textSize="20sp"
          android:textColor="#333333"
          android:layout_marginBottom="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <TextView
          android:id="@+id/tv_companyComment"
          android:gravity="center"
          android:textSize="16sp"
          android:textColor="#6d6d6d"
          android:layout_marginBottom="24dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:background="#efefef"
        android:layout_height="match_parent"/>
      <ListView
        android:id="@+id/lv_profile_channel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:background="#efefef"/>
    </LinearLayout>
  </com.puzi.puzi.ui.CusomScrollView>

</LinearLayout>