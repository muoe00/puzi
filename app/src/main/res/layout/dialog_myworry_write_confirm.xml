<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/channel_item_background"
             android:orientation="vertical" >

  <LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_store_challenge_fail"
    android:orientation="vertical">

    <com.puzi.puzi.ui.customview.NotoTextView
      app:fontWeight="medium"
      android:id="@+id/tv_dialog_title_point"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="38dp"
      android:gravity="center"
      android:textSize="20sp"
      android:textColor="#333333"
      android:lineSpacingExtra="-1sp"
      android:text=""/>

    <com.puzi.puzi.ui.customview.NotoTextView
      app:fontWeight="medium"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="19dp"
      android:textSize="20sp"
      android:textColor="#333333"
      android:lineSpacingExtra="-1sp"
      android:text="질문을 작성하시겠습니까?"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginBottom="40dp"
      android:layout_marginTop="24dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

      <com.puzi.puzi.ui.customview.NotoButton
        app:fontWeight="medium"
        android:id="@+id/btn_dialog_close"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_favorite_on"
        android:text="취소"
        android:textSize="16sp"
        android:textColor="#ff2470"/>

      <com.puzi.puzi.ui.customview.NotoButton
        app:fontWeight="medium"
        android:id="@+id/btn_dialog_confirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_puzi"
        android:text="확인"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"/>

    </LinearLayout>

  </LinearLayout>


</FrameLayout>