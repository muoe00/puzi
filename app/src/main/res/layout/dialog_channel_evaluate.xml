<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

  <LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
      android:id="@+id/dialog_edittext_tvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:gravity="center"
      android:text="별점주기"
      android:textSize="18sp"
      android:textColor="#9b9b9b"/>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="40dp">

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_1"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_2"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_3"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_4"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_5"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#dfdfdf"/>

    <TextView
      android:id="@+id/dialog_edittext_tvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="15dp"
      android:text="평가입력"
      android:textSize="18sp"
      android:textColor="#9b9b9b"/>

    <EditText
      android:id="@+id/et_dialog_channel_evaluate_comment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="25dp"
      android:paddingBottom="25dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_margin="20dp"
      android:background="#ffffff"
      android:ems="10"
      android:lines="5"
      android:gravity="top|left"
      android:hint="평가를 5자이상 작성해주세요."
      android:inputType="textMultiLine">

      <requestFocus/>
    </EditText>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#dfdfdf"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

      <Button
        android:id="@+id/dialog_edittext_btnCancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dialog_basic_button"
        android:text="취소"
        android:textColor="#333333"/>

      <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#dfdfdf"/>

      <Button
        android:id="@+id/btn_dialog_channel_evaluate_confirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dialog_basic_button"
        android:text="저장"
        android:textColor="#ff2470"/>

    </LinearLayout>
  </LinearLayout>

</FrameLayout>