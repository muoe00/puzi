<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/channel_item_background"
             android:orientation="vertical" >

  <LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
      android:id="@+id/dialog_edittext_tvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="38dp"
      android:layout_marginBottom="19dp"
      android:gravity="center"
      android:text="별점주기"
      android:textSize="20sp"
      android:textColor="#333333"/>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="20dp">

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_1"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_2"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_3"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_4"/>

      <ImageButton
        android:layout_gravity="center_vertical"
        android:background="#00000000"
        android:layout_marginLeft="6dp"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/oval_4_copy_2"
        android:id="@+id/dialog_channel_evaluate_star_5"/>

    </LinearLayout>

    <TextView
      android:id="@+id/dialog_edittext_tvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginTop="22dp"
      android:layout_marginBottom="18dp"
      android:text="평가입력"
      android:textSize="20sp"
      android:textColor="#333333"/>

    <EditText
      android:id="@+id/et_dialog_channel_evaluate_comment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="24dp"
      android:paddingTop="24dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_marginRight="20dp"
      android:layout_marginLeft="20dp"
      android:background="@drawable/channel_detail_evaluate_box"
      android:ems="10"
      android:lines="5"
      android:gravity="top|left"
      android:textSize="16dp"
      android:hint="평가를 5자이상 작성해주세요."
      android:inputType="textMultiLine">

      <requestFocus/>
    </EditText>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="37dp"
      android:layout_marginBottom="40dp"
      android:layout_marginTop="24dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

      <Button
        android:id="@+id/btn_dialog_channel_evaluate_confirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_puzi"
        android:text="저장"
        android:textColor="@color/colorWhite"/>

      <Button
        android:id="@+id/dialog_edittext_btnCancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_favorite_on"
        android:text="취소"
        android:textColor="@color/colorPuzi"/>

    </LinearLayout>
  </LinearLayout>

</FrameLayout>