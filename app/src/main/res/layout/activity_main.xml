<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

  <android.support.v4.view.ViewPager
    android:id="@+id/vp_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  </android.support.v4.view.ViewPager>

  <LinearLayout
    android:id="@+id/intro_fragment_line"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="0.1dp">
  </LinearLayout>

  <LinearLayout
    android:id="@+id/main_fragment_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:paddingTop="5dp"
    android:background="@color/colorPuzi"
    android:layout_height="56dp">

    <FrameLayout
      android:id="@+id/fl_advertise"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_advertise"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:paddingBottom="7dp"/>
      <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:id="@+id/iv_advertise_select"/>
      <Button
        android:id="@+id/btn_advertise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_channel"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_channel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:paddingBottom="7dp"/>
      <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:id="@+id/iv_channel_select"/>

      <Button
        android:id="@+id/btn_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_store"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_store"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:paddingBottom="7dp"/>
      <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:id="@+id/iv_store_select"/>

      <Button
        android:id="@+id/btn_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_setting"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:paddingBottom="7dp"/>
      <ImageView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:id="@+id/iv_setting_select"/>

      <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

  </LinearLayout>

</LinearLayout>
