<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_main"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

  <LinearLayout
    android:visibility="gone"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_main_setting"
    android:layout_width="match_parent"
    android:layout_height="54dp">

    <TextView
      android:text="설정"
      android:textColor="#333333"
      android:textSize="20sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_main_bar"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <FrameLayout
      android:id="@+id/fl_revel"
      android:layout_marginLeft="17dp"
      android:layout_gravity="center_vertical"
      android:layout_width="35dp"
      android:layout_height="37dp">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:id="@+id/iv_rankImage"/>

    </FrameLayout>

    <LinearLayout
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:id="@+id/rl_point"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:gravity="left"
      android:layout_width="match_parent"
      android:layout_height="45dp">

      <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/fl_point"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/btn_pointhistory"
          android:background="@null"/>
        <TextView
          android:gravity="center"
          android:layout_gravity="center"
          android:textSize="32sp"
          android:textStyle="bold"
          android:textColor="#000000"
          android:text="0"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tv_point"
          android:layout_alignParentTop="true"/>
      </FrameLayout>

      <ImageView
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/rectangle_2"
        android:layout_width="13.3dp"
        android:layout_height="match_parent"
        android:paddingTop="15.85dp"
        android:paddingBottom="15.85dp"
        android:id="@+id/iv_todaypoint"
        android:layout_alignBottom="@+id/fl_point"
        android:layout_toRightOf="@+id/fl_point"
        android:layout_toEndOf="@+id/fl_point"/>

      <TextView
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_todaypoint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="0"
        android:textColor="#999999"
        android:layout_alignBottom="@+id/iv_todaypoint"
        android:layout_toRightOf="@+id/iv_todaypoint"
        android:layout_toEndOf="@+id/iv_todaypoint"/>

    </LinearLayout>

    <ImageButton
      android:gravity="right"
      android:src="@drawable/add_friend"
      android:background="?android:attr/selectableItemBackground"
      android:layout_width="55dp"
      android:layout_height="50dp"
      android:id="@+id/ibtn_right_button"/>

  </LinearLayout>

  <com.puzi.puzi.ui.CustomViewPager
    android:id="@+id/vp_main"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  </com.puzi.puzi.ui.CustomViewPager>

  <LinearLayout
    android:id="@+id/intro_fragment_line"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#b2b2b2"
    android:layout_height="0.5dp">
  </LinearLayout>

  <LinearLayout
    android:layout_weight="0.1"
    android:id="@+id/main_fragment_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="50dp">

    <FrameLayout
      android:id="@+id/fl_advertise"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/iv_advertise"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_gravity="center"/>
      <Button
        android:id="@+id/btn_advertise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_channel"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_channel"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_gravity="center"/>

      <Button
        android:id="@+id/btn_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_store"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_store"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_gravity="center"/>

      <Button
        android:id="@+id/btn_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_setting"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_gravity="center"/>

      <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    </FrameLayout>

  </LinearLayout>

</LinearLayout>
