<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_reply_id"
      android:layout_centerVertical="true"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="19dp"
      android:text="id"
      android:textSize="16sp"/>

    <LinearLayout
      android:orientation="horizontal"
      android:gravity="right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true">

      <FrameLayout
        android:background="@drawable/goodbad_line"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:id="@+id/fl_good">

        <ImageView
          android:id="@+id/iv_good"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/like_icon"
          android:layout_gravity="left"
          android:layout_width="16dp"
          android:layout_height="16dp"/>
        <TextView
          android:layout_marginRight="15dp"
          android:layout_marginTop="4dp"
          android:layout_gravity="right"
          android:text="0"
          android:textSize="16sp"
          android:gravity="center"
          android:layout_width="30dp"
          android:layout_height="19dp"
          android:id="@+id/tv_good"/>
        <Button
          android:id="@+id/btn_good"
          android:background="@null"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

      </FrameLayout>

      <FrameLayout
        android:layout_marginLeft="10dp"
        android:background="@drawable/goodbad_line"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:id="@+id/fl_bad">

        <ImageView
          android:id="@+id/iv_bad"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/dislike_icon"
          android:layout_gravity="left"
          android:layout_width="16dp"
          android:layout_height="16dp"/>
        <TextView
          android:layout_marginRight="15dp"
          android:layout_marginTop="4dp"
          android:layout_gravity="right"
          android:text="0"
          android:textSize="16sp"
          android:gravity="center"
          android:layout_width="30dp"
          android:layout_height="19dp"
          android:id="@+id/tv_bad"/>
        <Button
          android:id="@+id/btn_bad"
          android:background="@null"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

      </FrameLayout>

    </LinearLayout>

  </RelativeLayout>

  <LinearLayout
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tv_reply_comment"
      android:text="reply"
      android:textSize="16sp"
      android:gravity="left|center"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="17dp">

    <TextView
      android:id="@+id/tv_reply_date"
      android:text="date"
      android:textSize="11sp"
      android:gravity="left|center"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  </LinearLayout>

</LinearLayout>