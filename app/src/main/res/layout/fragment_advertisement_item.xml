<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:gravity="center">

  <FrameLayout
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="10dp"
    android:background="@drawable/shadow_ad"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.joooonho.SelectableRoundedImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      app:sriv_right_top_corner_radius="8dp"
      app:sriv_left_top_corner_radius="8dp"
      app:sriv_right_bottom_corner_radius="2dp"
      app:sriv_left_bottom_corner_radius="2dp"
      app:sriv_oval="false"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:id="@+id/iv_home_advertise"
      android:background="#00000000"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@null"
      android:id="@+id/btn_advertiseWv"/>

    <LinearLayout
      android:orientation="horizontal"
      android:background="#CCFFFFFF"
      android:id="@+id/ll_advertise_text"
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:layout_height="72dp">

      <com.joooonho.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:sriv_right_top_corner_radius="75dp"
        app:sriv_left_top_corner_radius="75dp"
        app:sriv_left_bottom_corner_radius="75dp"
        app:sriv_right_bottom_corner_radius="75dp"
        app:sriv_border_color="#979797"
        app:sriv_border_width="1dp"
        android:src="#f0f0f0"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="17dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:id="@+id/iv_companyPicture"/>

      <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:layout_gravity="center_vertical"
        android:layout_width="220dp"
        android:layout_height="40dp">

        <TextView
          android:textSize="20sp"
          android:textColor="#333333"
          android:text="광고 타이틀 자리입니다"
          android:maxLines="1"
          android:focusableInTouchMode="true"
          android:focusable="true"
          android:ellipsize="end"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:id="@+id/tv_advertise"/>

        <TextView
          android:textSize="12sp"
          android:textColor="#9B9B9B"
          android:text="company"
          android:paddingTop="1dp"
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:id="@+id/tv_companyId"/>

      </LinearLayout>

      <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/iv_advertiseNew"/>

    </LinearLayout>

  </FrameLayout>

</LinearLayout>