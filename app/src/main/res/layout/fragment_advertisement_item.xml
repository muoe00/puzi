<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="343dp"
              android:layout_height="240dp"
              android:background="@color/colorWhite">

  <FrameLayout
    android:orientation="vertical"
    android:layout_width="343dp"
    android:layout_height="240dp">

    <ImageView
      android:scaleType="centerCrop"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="0.74"
      android:id="@+id/iv_home_advertise"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@null"
      android:id="@+id/btn_advertiseWv"/>

    <LinearLayout
      android:orientation="horizontal"
      android:background="#CCFFFFFF"
      android:id="@+id/ll_advertise_text"
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:layout_height="72dp">

      <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="17dp"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/background_tab"
          android:id="@+id/iv_companyPicture"/>

        <Button
          android:background="@null"
          android:id="@+id/btn_company"
          android:layout_height="match_parent"
          android:layout_width="match_parent"/>

      </FrameLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:layout_gravity="center_vertical"
        android:layout_width="250dp"
        android:layout_height="40dp">

        <TextView
          android:textSize="20sp"
          android:textColor="#333333"
          android:text="광고 타이틀 자리입니다."
          android:layout_width="250dp"
          android:layout_height="25dp"
          android:id="@+id/tv_advertise"/>

        <TextView
          android:textSize="12sp"
          android:textColor="#9B9B9B"
          android:text="company"
          android:layout_width="250dp"
          android:layout_height="15dp"
          android:id="@+id/tv_companyId"/>

      </LinearLayout>

      <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/iv_advertiseNew"/>
    </LinearLayout>

  </FrameLayout>

</LinearLayout>