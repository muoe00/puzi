<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:id="@+id/ll_cs_ask"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="24dp"
          android:layout_marginBottom="8dp"
          android:textSize="16sp"
          android:textColor="@color/colorBlack"
          android:text="문의 유형"
          android:gravity="left" />

        <Spinner
          android:id="@+id/sp_ask_type"
          android:prompt="@string/ask_type"
          android:layout_width="match_parent"
          android:layout_height="54dp">

        </Spinner>

      </LinearLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="24dp"
          android:layout_marginBottom="8dp"
          android:textSize="16sp"
          android:textColor="@color/colorBlack"
          android:text="이메일"
          android:gravity="left" />

        <EditText
          android:background="@drawable/edittext"
          android:layout_width="match_parent"
          android:layout_height="64dp"
          android:textSize="15sp"
          android:id="@+id/edt_cs_user_email"
          android:textColorHint="#6D6D6D"
          android:hint="답변 받을 이메일 주소를 입력하세요."
          android:ems="15"
          android:maxLines="1"
          android:inputType="textEmailAddress"
          android:paddingBottom="15dp"
          android:paddingTop="15dp"
          android:paddingLeft="15dp"/>

      </LinearLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="24dp"
          android:layout_marginBottom="8dp"
          android:textSize="16sp"
          android:textColor="@color/colorBlack"
          android:text="제목"
          android:gravity="left" />

        <EditText
          android:background="@drawable/edittext"
          android:layout_width="match_parent"
          android:layout_height="64dp"
          android:textSize="15sp"
          android:id="@+id/edt_cs_user_title"
          android:hint="제목을 입력하세요."
          android:textColorHint="#6D6D6D"
          android:maxLength="15"
          android:maxLines="1"
          android:paddingBottom="15dp"
          android:paddingTop="15dp"
          android:paddingLeft="15dp"/>

      </LinearLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="24dp"
          android:layout_marginBottom="8dp"
          android:textSize="16sp"
          android:textColor="@color/colorBlack"
          android:text="내용"
          android:gravity="left" />

        <EditText
          android:background="@drawable/edittext"
          android:layout_width="match_parent"
          android:layout_height="320dp"
          android:textSize="15sp"
          android:id="@+id/edt_cs_user_content"
          android:hint="내용을 입력하세요."
          android:gravity="top"
          android:textColorHint="#6D6D6D"
          android:paddingBottom="15dp"
          android:paddingTop="15dp"
          android:paddingLeft="15dp"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <Button
          android:layout_width="match_parent"
          android:layout_height="54dp"
          android:id="@+id/btn_ask"
          android:background="@drawable/button_search"
          android:textSize="16sp"
          android:text="문의하기"
          android:textColor="@color/colorWhite"/>

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</LinearLayout>
