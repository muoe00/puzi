<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scale_base_width="328"
            app:scale_base_height="80">

            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:sriv_right_top_corner_radius="8dp"
                app:sriv_left_top_corner_radius="8dp"
                app:sriv_right_bottom_corner_radius="8dp"
                app:sriv_left_bottom_corner_radius="8dp"
                app:sriv_oval="false"
                app:scale_left="0"
                app:scale_top="0"
                app:scale_width="328"
                app:scale_height="80"
                android:src="@drawable/rectangle_33_copy_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:id="@+id/iv_theme_background"
                android:background="#00000000"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/rl_theme_item"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="40.2dp"
                android:layout_height="40.2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13.4dp">

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_thema_lack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <kr.puzi.puzi.ui.customview.NotoTextView
                        app:fontWeight="regular"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:text="\?"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <kr.puzi.puzi.ui.customview.NotoTextView
                    app:fontWeight="medium"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:text="응답 데이터가 부족하여\n개인 지표를 확인할 수 없습니다"
                    android:gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_theme_title"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <kr.puzi.puzi.ui.customview.NotoTextView
                        app:fontWeight="regular"
                        android:textSize="11dp"
                        android:textColor="#ffffff"
                        android:text="company"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_theme_versus_max"/>

                    <kr.puzi.puzi.ui.customview.NotoTextView
                        app:fontWeight="regular"
                        android:textSize="11dp"
                        android:textColor="#ffffff"
                        android:text=" vs "
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_theme_versus"/>

                    <kr.puzi.puzi.ui.customview.NotoTextView
                        app:fontWeight="regular"
                        android:textSize="11dp"
                        android:textColor="#ffffff"
                        android:text="company"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_theme_versus_min"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/people"
                    android:layout_width="9.6dp"
                    android:layout_height="9.6dp" />

                <kr.puzi.puzi.ui.customview.NotoTextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_theme_item_count"
                    android:layout_marginLeft="1.9dp"
                    android:text="2000"
                    android:textColor="#ffffff"
                    android:textSize="11dp"
                    app:fontWeight="regular" />

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>


</LinearLayout>