<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/channel_item_background"
             android:orientation="vertical" >

  <LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_store_challenge_fail"
    android:orientation="vertical">

    <kr.puzi.puzi.ui.customview.NotoButton
      app:fontWeight="demilight"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      android:text="신고하기"
      android:textSize="16dp"
      android:textColor="#333333"
      android:background="#00000000"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_reply_longclick_notify"/>

    <LinearLayout
      android:id="@+id/ll_reply_longclick_bar"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_width="match_parent"
      android:background="#dadada"
      android:layout_height="1dp"/>

    <kr.puzi.puzi.ui.customview.NotoButton
      app:fontWeight="demilight"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      android:text="삭제하기"
      android:textSize="16dp"
      android:textColor="#333333"
      android:background="#00000000"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_reply_longclick_delete"/>

  </LinearLayout>


</FrameLayout>