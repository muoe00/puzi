<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EAEAEA"
    android:layout_gravity="center">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/colorBlack"
      android:text="추가정보 입력"
      android:layout_gravity="center"
      android:paddingTop="15dp"
      android:paddingBottom="15dp" />
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp">

    <TextView
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:paddingRight="30dp"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/colorBlack"
      android:text="성별" />

    <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/info_genderRadioGroup">

      <RadioButton
        android:text="남자"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_mRadioButton"
        android:layout_weight="0.5" />

      <RadioButton
        android:text="여자"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_wRadioButton"
        android:layout_weight="1" />

    </RadioGroup>

  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="30dp"
    android:weightSum="1">

    <TextView
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:paddingRight="30dp"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/colorBlack"
      android:text="출생년도" />

    <EditText
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:id="@+id/info_ageEditText"
      android:hint="예) 2017"
      android:background="@drawable/edittext"
      android:paddingBottom="10dp"
      android:paddingTop="10dp"
      android:paddingLeft="10dp"/>


  </LinearLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:paddingRight="10dp"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/colorBlack"
      android:text="추천인 아이디" />

    <EditText
      android:layout_width="121dp"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:id="@+id/info_recommendidEditText"
      android:hint="추천인은 생략 가능합니다"
      android:background="@drawable/edittext"
      android:paddingBottom="10dp"
      android:paddingTop="10dp"
      android:paddingLeft="10dp"
      android:layout_weight="0.45"/>

  </LinearLayout>

  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="170dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_favorites"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:paddingRight="30dp"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/colorBlack"
      android:text="관심분야"/>

    <TableLayout
      android:id="@+id/tl_favorites"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/tv_favorites"
      android:layout_toEndOf="@+id/tv_favorites">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
          android:text="문화"
          android:layout_width="wrap_content"
          android:textSize="13sp"
          android:layout_height="wrap_content"
          android:id="@+id/info_cultureRadioButton"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_marginBottom="5dp"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"/>
        <CheckBox
          android:text="쇼핑"
          android:layout_below="@+id/info_cultureRadioButton"
          android:textSize="13sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/info_shoppingRadioButton"
          android:layout_alignBaseline="@+id/info_tripRadioButton"
          android:layout_alignBottom="@+id/info_tripRadioButton"
          android:layout_toLeftOf="@+id/info_tripRadioButton"
          android:layout_toStartOf="@+id/info_tripRadioButton"
          android:layout_marginBottom="5dp"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"/>
      </TableRow>
      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
          android:text="뷰티"
          android:textSize="13sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/info_beautyRadioButton"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginBottom="5dp"
          android:layout_alignParentTop="true"
          android:layout_alignLeft="@+id/info_shoppingRadioButton"
          android:layout_alignStart="@+id/info_shoppingRadioButton"/>
        <CheckBox
          android:text="여행"
          android:textSize="13sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/info_tripRadioButton"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginBottom="5dp"
          android:layout_below="@+id/info_diningRadioButton"
          android:layout_toRightOf="@+id/info_gameRadioButton"
          android:layout_toEndOf="@+id/info_gameRadioButton"/>
      </TableRow>
      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
          android:text="게임"
          android:textSize="13sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/info_gameRadioButton"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginBottom="5dp"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/info_cultureRadioButton"
          android:layout_toStartOf="@+id/info_cultureRadioButton"/>
        <CheckBox
          android:text="금융"
          android:layout_width="wrap_content"
          android:textSize="13sp"
          android:layout_height="wrap_content"
          android:id="@+id/info_financeRadioButton"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginBottom="5dp"
          android:layout_above="@+id/info_gameRadioButton"
          android:layout_alignLeft="@+id/info_diningRadioButton"
          android:layout_alignStart="@+id/info_diningRadioButton"/>
      </TableRow>
      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
          android:text="외식"
          android:layout_width="81dp"
          android:layout_height="wrap_content"
          android:textSize="13sp"
          android:id="@+id/info_diningRadioButton"
          android:layout_marginRight="30dp"
          android:layout_marginEnd="30dp"
          android:layout_below="@+id/info_financeRadioButton"
          android:layout_toRightOf="@+id/tv_favorites"
          android:layout_toEndOf="@+id/tv_favorites"/>
      </TableRow>
    </TableLayout>

    <TextView
      android:layout_width="150dp"
      android:layout_height="30dp"
      android:gravity="center"
      android:textSize="12sp"
      android:textColor="#980000"
      android:paddingTop="5dp"
      android:text="최소 3개 이상 선택해야 합니다."
      android:layout_marginLeft="100dp"
      android:layout_marginTop="20dp"
      android:layout_alignParentBottom="true"/>

  </RelativeLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <CheckBox
      android:text="CheckBox"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginRight="10dp"
      android:id="@+id/cb_join_agree"/>
    <TextView
      android:text="서비스 이용 약관, 개인정보 취급 방침, 위치기반 서비스 이용약관에 동의합니다."
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView6"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">
    <Button
      android:text="서비스 이용 약관"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/btn_join_service"
      android:layout_weight="1"/>
    <Button
      android:text="개인정보 취급 방침"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/btn_join_personal"
      android:layout_weight="1"/>
    <Button
      android:text="위치기반 서비스 이용약관"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/btn_join_gps"
      android:layout_weight="1"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <Button
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:id="@+id/info_storeButton"
      android:textSize="15sp"
      android:text="저장하기"
      android:src="@drawable/button"
      android:textColor="@color/colorWhite"
      android:background="@color/colorNavy"
    />

  </LinearLayout>

</LinearLayout>