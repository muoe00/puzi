<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="0dp"
              android:layout_margin="0dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:orientation="vertical"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="7.5dp"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:background="@color/colorWhite"
      android:layout_height="match_parent">

      <ImageButton
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:id="@+id/ibtn_item_channel_image_1"
        android:background="#00000000"/>

      <Button
        android:text="title"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:typeface="sans"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/tv_item_channel_title_1" android:layout_weight="1"/>
      <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">

        <ImageButton
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginTop="4dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="8dp"
          android:layout_marginRight="8dp"
          android:background="#00000000"
          android:src="@drawable/active_icon"
          android:id="@+id/ibtn_item_channel_company_image_1"/>

        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>

        <TextView
          android:layout_gravity="center_vertical"
          android:text="5.0/5.0"
          android:textSize="12sp"
          android:textColor="#9b9b9b"
          android:typeface="sans"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tv_item_channel_score_1"/>

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:layout_marginRight="16dp"
      android:layout_marginLeft="7.5dp"
      android:background="@color/colorWhite"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="match_parent" >

      <ImageButton
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:id="@+id/ibtn_item_channel_image_2"
        android:background="#00000000"/>

      <Button
        android:text="title"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:typeface="sans"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/tv_item_channel_title_2" android:layout_weight="1"/>
      <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">

        <ImageButton
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginTop="4dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="8dp"
          android:layout_marginRight="8dp"
          android:background="#00000000"
          android:src="@drawable/active_icon"
          android:id="@+id/ibtn_item_channel_company_image_2"/>

        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>
        <ImageView
          android:layout_gravity="center_vertical"
          android:layout_width="8dp"
          android:layout_height="8dp"
          android:layout_marginRight="4dp"
          android:src="@drawable/oval_2_copy_3"
          android:id="@+id/imageView"/>

        <TextView
          android:layout_gravity="center_vertical"
          android:text="5.0/5.0"
          android:textSize="12sp"
          android:textColor="#9b9b9b"
          android:typeface="sans"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tv_item_channel_score_2"/>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>