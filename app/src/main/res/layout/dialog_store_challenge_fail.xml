<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/channel_item_background"
             android:orientation="vertical" >

  <LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_store_challenge_fail"
    android:orientation="vertical">

    <kr.puzi.puzi.ui.customview.NotoTextView
      app:fontWeight="regular"
      android:id="@+id/dialog_edittext_tvComment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="38dp"
      android:layout_marginBottom="19dp"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="#333333"
      android:lineSpacingExtra="-1sp"
      android:text="아쉽지만 다음기회에.."/>

    <ImageView
      android:src="@drawable/popup_challenge_fail"
      android:layout_gravity="center_horizontal"
      android:layout_width="151dp"
      android:layout_height="151dp"/>

    <kr.puzi.puzi.ui.customview.NotoButton
      app:fontWeight="bold"
      android:id="@+id/btn_dialog_close"
      android:layout_width="300dp"
      android:layout_height="55dp"
      android:layout_marginTop="24dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_gravity="center"
      android:background="@drawable/button_store_challenge_fail"
      android:textSize="16dp"
      android:text="닫기"
      android:textColor="@color/colorWhite"/>

  </LinearLayout>


</FrameLayout>