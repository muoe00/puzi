<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:background="#00000000"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/fl_container"
             android:layout_gravity="top">

  <Button
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#00000000"
    android:id="@+id/btn_top" />

  <LinearLayout
    android:id="@+id/ll_view_container"
    android:layout_marginTop="24dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#fff8fa"
    android:layout_height="70dp">

    <ImageView
      android:id="@+id/iv_top"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="13dp"
      android:layout_gravity="center_vertical"
      android:src="@drawable/push_icon"
      android:layout_width="49dp"
      android:layout_height="49dp"/>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <kr.puzi.puzi.ui.customview.NotoTextView
        app:fontWeight="medium"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/tv_top_title"
        android:textColor="#666666"
        android:lineSpacingExtra="-1sp"
        android:text="새로운 광고가 도착했습니다."/>

      <kr.puzi.puzi.ui.customview.NotoTextView
        app:fontWeight="light"
        android:gravity="left"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/tv_top_comment"
        android:textColor="#666666"
        android:lineSpacingExtra="-1sp"
        android:text="새로운 광고가 도착했습니다."/>

    </LinearLayout>

  </LinearLayout>

</FrameLayout>