<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ImageView
    android:layout_marginLeft="8dp"
    android:layout_width="176dp"
    android:layout_height="96dp"
    android:src="@drawable/active_icon"
    android:background="#00000000"
    android:id="@+id/iv_item_channel_detail_editors_page_image"/>

  <TextView
    android:text="title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:textSize="16sp"
    android:textColor="#35343d"
    android:id="@+id/tv_item_channel_detail_editors_page_title"/>

  <TextView
    android:text="name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:textSize="12sp"
    android:textColor="#9b9b9b"
    android:id="@+id/tv_item_channel_detail_editors_page_name"/>

</LinearLayout>