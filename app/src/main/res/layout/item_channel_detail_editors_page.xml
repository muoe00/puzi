<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <com.joooonho.SelectableRoundedImageView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:sriv_right_top_corner_radius="8dp"
    app:sriv_left_top_corner_radius="8dp"
    app:sriv_left_bottom_corner_radius="8dp"
    app:sriv_right_bottom_corner_radius="8dp"
    android:layout_marginLeft="8dp"
    android:layout_width="176dp"
    android:layout_height="96dp"
    android:src="@drawable/active_icon"
    android:background="#00000000"
    android:id="@+id/iv_item_channel_detail_editors_page_image"/>

  <com.puzi.puzi.ui.customview.NotoTextView
    app:fontWeight="medium"
    android:text="title"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:maxLines="1"
    android:ellipsize="end"
    android:textSize="15sp"
    android:textColor="#35343d"
    android:id="@+id/tv_item_channel_detail_editors_page_title"/>

  <com.puzi.puzi.ui.customview.NotoTextView
    app:fontWeight="light"
    android:text="name"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:textSize="13sp"
    android:textColor="#6d6d6d"
    android:id="@+id/tv_item_channel_detail_editors_page_name"/>

</LinearLayout>