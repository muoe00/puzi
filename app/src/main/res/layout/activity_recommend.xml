<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

  <FrameLayout
    android:id="@+id/fl_container_top"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="54dp">

    <ImageButton
      android:layout_gravity="left|center"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:background="@null"
      android:src="@drawable/back_chevron"
      android:id="@+id/ibtn_back"/>

    <kr.puzi.puzi.ui.customview.NotoTextView
      app:fontWeight="regular"
      android:text="친구 추천"
      android:textColor="#333333"
      android:textSize="20dp"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/tv_setting_title"/>
  </FrameLayout>

  <ScrollView
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ssomai.android.scalablelayout.ScalableLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_above="@+id/main_textview"
          app:scale_base_width="360"
          app:scale_base_height="144">

          <ImageButton
            android:id="@+id/ibtn_event_link"
            android:src="@drawable/recommend_event_image"
            android:background="#000000"
            android:scaleType="fitXY"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="360"
            app:scale_height="144"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <Button
          android:layout_gravity="center|bottom"
          android:layout_marginLeft="70dp"
          android:layout_marginRight="70dp"
          android:layout_marginBottom="6dp"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:text="이모티콘 받기"
          android:id="@+id/btn_event_link"
          android:background="@drawable/bg_emoticon_save"
          android:scaleType="fitXY"
          android:textColor="#ffffff"
          android:textSize="15dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"/>

      </FrameLayout>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>

        <LinearLayout
          android:orientation="vertical"
          android:layout_width="296dp"
          android:layout_height="wrap_content">

          <kr.puzi.puzi.ui.customview.NotoTextView
            app:fontWeight="demilight"
            android:text="친구에게 푸지를 추천하고"
            android:textSize="24dp"
            android:textColor="#333333"
            android:layout_marginTop="16.6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

          <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <kr.puzi.puzi.ui.customview.NotoTextView
              app:fontWeight="medium"
              android:text="100P"
              android:textSize="24dp"
              android:textColor="@color/colorPuzi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

            <kr.puzi.puzi.ui.customview.NotoTextView
              app:fontWeight="demilight"
              android:text="를 받으세요!"
              android:textSize="24dp"
              android:textColor="#333333"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          </LinearLayout>

          <ImageView
            android:layout_marginTop="25dp"
            android:src="@drawable/group_3"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_width="125dp"
            android:layout_height="100dp"/>

          <kr.puzi.puzi.ui.customview.NotoTextView
            app:fontWeight="regular"
            android:gravity="center"
            android:text="추천 아이디"
            android:textSize="16dp"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <kr.puzi.puzi.ui.customview.NotoTextView
            app:fontWeight="medium"
            android:id="@+id/tv_recommend_id"
            android:textSize="28dp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="296dp"
            android:layout_height="54dp"
            android:background="@drawable/btn_kakao_invite"
            android:id="@+id/recommend_kakaoButton"/>

          <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <kr.puzi.puzi.ui.customview.NotoTextView
              app:fontWeight="demilight"
              android:text="친구 회원 가입시 "
              android:textSize="16dp"
              android:textColor="#6d6d6d"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

            <kr.puzi.puzi.ui.customview.NotoTextView
              app:fontWeight="medium"
              android:text="100P"
              android:textSize="16dp"
              android:textColor="@color/colorPuzi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

            <kr.puzi.puzi.ui.customview.NotoTextView
              app:fontWeight="demilight"
              android:text=" 추가 적립 가능합니다"
              android:textSize="16dp"
              android:textColor="#333333"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>

      </LinearLayout>

    </LinearLayout>
  </ScrollView>
  <LinearLayout
    android:background="#dadada"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>

</LinearLayout>

