<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

  <FrameLayout
    android:id="@+id/fl_setting"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageButton
      android:layout_gravity="left|center"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:background="@null"
      android:src="@drawable/back_chevron"
      android:id="@+id/ibtn_back"/>

    <com.puzi.puzi.ui.customview.NotoTextView
      app:fontWeight="regular"
      android:text="친구 추천"
      android:textColor="#333333"
      android:textSize="20sp"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/tv_setting_title"/>
  </FrameLayout>

  <LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      android:layout_marginTop="20dp"
      android:text="친구 추천하기"
      android:textSize="18dp"
      android:layout_width="170dp"
      android:layout_height="70dp"
      android:gravity="center"
      android:id="@+id/recommend_textView"/>
    <TextView
      android:text="친구 추천하고 500P 받으세요 !"
      android:textSize="15dp"
      android:layout_width="230dp"
      android:layout_height="match_parent"
      android:gravity="center"
      android:id="@+id/recommend_idTextView"/>
  </LinearLayout>

  <Button
    android:layout_gravity="center|bottom"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_width="290dp"
    android:layout_height="52dp"
    android:background="@drawable/kakao_recommand"
    android:id="@+id/recommend_kakaoButton"/>

</LinearLayout>

