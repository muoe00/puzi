<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/button_like_on"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="9.1dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/iv_item_store_brand_single"/>

  <kr.puzi.puzi.ui.customview.NotoTextView
    app:fontWeight="regular"
    android:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#6d6d6d"
    android:layout_marginBottom="22dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/tv_item_store_brand_single"/>

</LinearLayout>