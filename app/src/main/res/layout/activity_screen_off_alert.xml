<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#00000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center">

  <LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_store_challenge_fail"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <com.puzi.puzi.ui.customview.NotoTextView
      app:fontWeight="medium"
      android:gravity="left"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:id="@+id/tv_title"
      android:textColor="#666666"
      android:lineSpacingExtra="-1sp"
      android:text="새로운 광고가 도착했습니다."/>

    <com.puzi.puzi.ui.customview.NotoTextView
      android:padding="5dp"
      app:fontWeight="light"
      android:gravity="left"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:lines="2"
      android:id="@+id/tv_comment"
      android:textColor="#333333"
      android:lineSpacingExtra="-1sp"
      android:text="광고내용"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

      <com.puzi.puzi.ui.customview.NotoButton
        app:fontWeight="medium"
        android:id="@+id/btn_dialog_close"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_favorite_on"
        android:text="닫기"
        android:textSize="14sp"
        android:textColor="#ff2470"/>

      <com.puzi.puzi.ui.customview.NotoButton
        app:fontWeight="medium"
        android:id="@+id/btn_dialog_confirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_puzi"
        android:text="자세히보기"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"/>

    </LinearLayout>

  </LinearLayout>

</FrameLayout>